rules_version='2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // =======================
    // User Profiles
    // =======================
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // =======================
    // Worker Profiles
    // =======================
    match /workers/{workerId} {
      // Workers can read and write their own profile
      allow read, write: if request.auth != null && request.auth.uid == workerId;
      // Anyone authenticated can read worker profiles (for discovery)
      allow read: if request.auth != null;
    }
    
    // =======================
    // Jobs/Service Requests
    // =======================
    match /jobs/{jobId} {
      // Job owner can read/write their jobs
      allow read, write: if request.auth != null && 
                           request.auth.uid == resource.data.clientId;
      // Allow creating jobs if user is the client
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.clientId;
      // Workers can read jobs to browse opportunities
      allow read: if request.auth != null;
      // Workers can update job status when assigned (hiredProId)
      allow update: if request.auth != null && 
                      request.auth.uid == resource.data.hiredProId;
    }
    
    // =======================
    // Proposals/Offers
    // =======================
    match /proposals/{proposalId} {
      // Worker who created the proposal can read/write
      allow read, write: if request.auth != null && 
                           request.auth.uid == resource.data.workerId;
      // Client who owns the job can read proposals
      allow read: if request.auth != null && 
                    request.auth.uid == resource.data.clientId;
    }
    
    // =======================
    // Bookings
    // =======================
    match /bookings/{bookingId} {
      // Both client and worker can read their bookings
      allow read: if request.auth != null && 
                    (request.auth.uid == resource.data.clientId || 
                     request.auth.uid == resource.data.workerId);
      // Client can create and update their bookings
      allow create, update: if request.auth != null && 
                              request.auth.uid == request.resource.data.clientId;
      // Worker can update booking status
      allow update: if request.auth != null && 
                      request.auth.uid == resource.data.workerId;
    }
    
    // =======================
    // Reviews/Ratings
    // =======================
    match /reviews/{reviewId} {
      // Anyone authenticated can read reviews
      allow read: if request.auth != null;
      // Only the reviewer can create a review
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.reviewerId;
      // Reviews cannot be updated or deleted (immutable)
      allow update, delete: if false;
    }
    
    // =======================
    // Messages/Conversations
    // =======================
    match /conversations/{conversationId} {
      // Client can read and write their conversations
      allow read, write: if request.auth != null && 
                           request.auth.uid == resource.data.clientId;
      // Worker can read and write their conversations
      allow read, write: if request.auth != null && 
                           request.auth.uid == resource.data.workerId;
      // Participants can read and write (fallback)
      allow read, write: if request.auth != null && 
                           request.auth.uid in resource.data.participants;
      // Allow creating conversations if user is client or worker
      allow create: if request.auth != null && 
                      (request.auth.uid == request.resource.data.clientId ||
                       request.auth.uid == request.resource.data.workerId ||
                       request.auth.uid in request.resource.data.participants);
    }
    
    match /conversations/{conversationId}/messages/{messageId} {
      // Client can read and create messages
      allow read, create: if request.auth != null && 
                            request.auth.uid == get(/databases/$(database)/documents/conversations/$(conversationId)).data.clientId;
      // Worker can read and create messages
      allow read, create: if request.auth != null && 
                            request.auth.uid == get(/databases/$(database)/documents/conversations/$(conversationId)).data.workerId;
      // Participants can read and create messages (fallback)
      allow read, create: if request.auth != null && 
                            request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    // =======================
    // Notifications
    // =======================
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if request.auth != null && 
                    request.auth.uid == resource.data.userId;
      // System can create notifications (admin SDK)
      allow create: if request.auth != null;
    }
    
    // =======================
    // Service Categories
    // =======================
    match /categories/{categoryId} {
      // Anyone authenticated can read categories
      allow read: if request.auth != null;
      // Only admins can write (protect in production with custom claims)
      allow write: if false;
    }
    
    // =======================
    // Blocked Users (for audit/legal)
    // =======================
    match /blocked_users/{blockId} {
      // Anyone authenticated can create a block record
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.blockerId;
      // Only the blocker can read their block records
      allow read: if request.auth != null && 
                    request.auth.uid == resource.data.blockerId;
      // Block records are immutable (for legal purposes)
      allow update, delete: if false;
    }
    
    // =======================
    // User Notifications (subcollection)
    // =======================
    match /users/{userId}/notifications/{notificationId} {
      // Users can read and update their own notifications
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // System/other users can create notifications for a user
      allow create: if request.auth != null;
      // Notifications cannot be deleted
      allow delete: if false;
    }
    
    // =======================
    // Worker Notifications (subcollection)
    // =======================
    match /workers/{workerId}/notifications/{notificationId} {
      // Workers can read and update their own notifications
      allow read, update: if request.auth != null && request.auth.uid == workerId;
      // System/other users can create notifications for a worker
      allow create: if request.auth != null;
      // Notifications cannot be deleted
      allow delete: if false;
    }
    
    // =======================
    // Job Proposals (subcollection)
    // =======================
    match /jobs/{jobId}/proposals/{proposalId} {
      // Worker who created the proposal can read/write (field is 'workerId')
      allow read, write: if request.auth != null && 
                           request.auth.uid == resource.data.workerId;
      // Allow worker to create proposal
      allow create: if request.auth != null && 
                      request.auth.uid == request.resource.data.workerId;
      // Job owner (client) can read all proposals for their job
      allow read: if request.auth != null && 
                    request.auth.uid == get(/databases/$(database)/documents/jobs/$(jobId)).data.clientId;
      // Job owner can update proposal status (shortlist, reject, hire)
      allow update: if request.auth != null && 
                      request.auth.uid == get(/databases/$(database)/documents/jobs/$(jobId)).data.clientId;
    }
  }
}
